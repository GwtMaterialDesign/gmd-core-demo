<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:m="urn:import:gwt.material.design.client.ui">

    <ui:with field="res" type="gmd.core.demo.client.resources.AppResources"/>

    <m:MaterialPanel m:id="app-container">
        <m:MaterialHeader layoutPosition="FIXED" width="100%" top="0" depth="995">
            <m:MaterialNavBar ui:field="navBar" activates="right-sidenav" backgroundColor="WHITE" overflow="HIDDEN">
                <m:MaterialNavBrand>
                    <m:MaterialLabel ui:field="navBrand" text="Core" textColor="BLACK" fontSize="0.8em"/>
                </m:MaterialNavBrand>
                <m:MaterialNavSection float="RIGHT">
                    <m:MaterialLink ui:field="install" visible="false" text="INSTALL" />
                </m:MaterialNavSection>
            </m:MaterialNavBar>
        </m:MaterialHeader>

        <m:MaterialSideNavPush ui:field="sidenav" m:id="right-sidenav" width="300">
            <m:MaterialSideNavContent ui:field="home" height="60px">
                <m:MaterialImage url="/launcher-icons/launcher1x.png" alt="logo" float="LEFT" width="32px" marginRight="20"/>
                <m:MaterialPanel>
                    <m:MaterialLabel text="gwt-material" textColor="BLACK" fontWeight="BOLD" lineHeight="24" marginTop="12"/>
                    <m:MaterialLabel text="Version 2.2" lineHeight="12" fontSize="0.8em"/>
                </m:MaterialPanel>
            </m:MaterialSideNavContent>
        </m:MaterialSideNavPush>


        <m:MaterialContainer paddingTop="64">
            <m:MaterialPanel ui:field="header" padding="40">
                <m:MaterialLabel ui:field="title" fontSize="2.4em" />
                <m:MaterialLabel ui:field="description" marginBottom="20"/>
                <m:MaterialRow marginBottom="0">
                    <m:MaterialAnchorButton ui:field="javaSource" text="Java" paddingLeft="0" customIconType="fab fa-java" backgroundColor="WHITE" textColor="INDIGO" shadow="0"/>
                    <m:MaterialAnchorButton ui:field="xmlSource" text="XML" iconType="CODE" backgroundColor="WHITE" textColor="INDIGO" shadow="0"/>
                </m:MaterialRow>
            </m:MaterialPanel>

            <m:MaterialPanel ui:field="container" padding="40"/>
        </m:MaterialContainer>

    </m:MaterialPanel>
</ui:UiBinder>
