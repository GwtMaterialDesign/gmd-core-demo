<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:m="urn:import:gwt.material.design.client.ui">

    <ui:with field="res" type="gmd.core.demo.client.resources.AppResources"/>

    <m:MaterialPanel>
        <m:MaterialHeader layoutPosition="FIXED" width="100%" top="0">
            <m:MaterialNavBar ui:field="navBar" activates="sidenav" backgroundColor="WHITE">
                <m:MaterialNavBrand fontSize="1.2em" textColor="BLACK">
                    <m:MaterialImage url="/launcher-icons/launcher1x.png" alt="logo" float="LEFT" width="60px"/>
                    <m:MaterialPanel>
                        <m:MaterialLabel text="gwt-material" textColor="BLACK" fontWeight="BOLD" lineHeight="24" marginTop="12"/>
                        <m:MaterialLabel text="Version 2.2" lineHeight="12" fontSize="0.6em"/>
                    </m:MaterialPanel>
                </m:MaterialNavBrand>
                <m:MaterialNavSection float="RIGHT">
                    <m:MaterialLink text="CORE" textColor="BLACK"/>
                    <m:MaterialLink text="ADDINS" textColor="BLACK"/>
                    <m:MaterialLink text="TABLE" textColor="BLACK"/>
                    <m:MaterialLink ui:field="install" visible="false" text="INSTALL" />
                </m:MaterialNavSection>
            </m:MaterialNavBar>
        </m:MaterialHeader>

        <m:MaterialContainer ui:field="container" paddingTop="64" />

        <m:MaterialFAB>
            <m:MaterialButton ui:field="btnAdd" iconType="FILE_DOWNLOAD" type="FLOATING" size="LARGE" backgroundColor="WHITE" iconColor="GREY_DARKEN_4"/>
        </m:MaterialFAB>
    </m:MaterialPanel>
</ui:UiBinder>
