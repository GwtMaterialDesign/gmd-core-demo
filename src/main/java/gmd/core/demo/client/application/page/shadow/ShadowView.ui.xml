<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:m='urn:import:gwt.material.design.client.ui'
			 xmlns:ma="urn:import:gwt.material.design.addins.client"
			 xmlns:widget="urn:import:gmd.core.demo.client.application.widget"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<m:MaterialPanel>
		<widget:CodeSection sectionTitle="Panels"
							description="By adding shadow='1' to any material panel, material row, material column, material card, you can easily apply a shadow to that element">
			<m:MaterialRow>
				<m:MaterialColumn grid="s12 m12 l2" shadow="1" waves="DEFAULT" height="200px" marginRight="20"
								  marginBottom="20"/>
				<m:MaterialColumn grid="s12 m12 l2" shadow="2" waves="RED" height="200px" marginRight="20"
								  marginBottom="20"/>
				<m:MaterialColumn grid="s12 m12 l2" shadow="3" waves="TEAL" height="200px" marginRight="20"
								  marginBottom="20"/>
				<m:MaterialColumn grid="s12 m12 l2" shadow="4" waves="YELLOW" height="200px" marginRight="20"
								  marginBottom="20"/>
				<m:MaterialColumn grid="s12 m12 l2" shadow="5" waves="PURPLE" height="200px" marginRight="20"
								  marginBottom="20"/>
			</m:MaterialRow>
			<g:HTMLPanel>
				<pre class="xml">
					&lt;m:MaterialRow>
					&lt;m:MaterialColumn grid="s12 m12 l2" shadow="1" waves="DEFAULT" height="200px" margin="12"/>
					&lt;m:MaterialColumn grid="s12 m12 l2" shadow="2" waves="RED" height="200px" margin="12"/>
					&lt;m:MaterialColumn grid="s12 m12 l2" shadow="3" waves="TEAL" height="200px" margin="12"/>
					&lt;m:MaterialColumn grid="s12 m12 l2" shadow="4" waves="YELLOW" height="200px" margin="12"/>
					&lt;m:MaterialColumn grid="s12 m12 l2" shadow="5" waves="PURPLE" height="200px" margin="12"/>
					&lt;/m:MaterialRow>
				</pre>
			</g:HTMLPanel>
		</widget:CodeSection>

		<widget:CodeSection sectionTitle="Shadow">
			<ma:webp.MaterialWebpImage url="https://gwtmaterialdesign.github.io/gwt-material-demo/images/image.webp"
									   fallbackExtension="png" shadow="1"/>
			<g:HTMLPanel>
				<pre class="xml">
					&lt;ma:webp.MaterialWebpImage
					url="https://gwtmaterialdesign.github.io/gwt-material-demo/images/image.webp"
					fallbackExtension="png" shadow="1"/>
				</pre>
			</g:HTMLPanel>
		</widget:CodeSection>
	</m:MaterialPanel>
</ui:UiBinder>
