<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m='urn:import:gwt.material.design.client.ui'
             xmlns:widget="urn:import:gmd.core.demo.client.application.widget"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <m:MaterialPanel>
        <m:MaterialPanel paddingTop="80" paddingBottom="80" backgroundColor="GREY_LIGHTEN_5">
            <m:MaterialPanel containerEnabled="true">
                <m:MaterialLabel text="Button" fontWeight="BOLD" fontSize="3em" />
                <m:MaterialLabel text="Build the future of GWT using PWAs and Material Design Look and Feel." marginBottom="20"/>
                <m:MaterialChip letter="X" text="XML" marginRight="12" backgroundColor="TRANSPARENT" border="1px solid #2196F3" textColor="BLUE" letterBackgroundColor="BLUE" letterColor="WHITE"/>
                <m:MaterialChip letter="J" text="JAVA" backgroundColor="TRANSPARENT" border="1px solid #2196F3" textColor="BLUE" letterBackgroundColor="BLUE" letterColor="WHITE"/>
            </m:MaterialPanel>
        </m:MaterialPanel>

        <m:MaterialPanel containerEnabled="true">
            <m:MaterialTitle title="Raised" description="The raised button is a standard button that signify actions and seek to give depth to a mostly flat page." />
            <m:MaterialButton margin="8" text="Button" waves="DEFAULT" backgroundColor="WHITE"  textColor="BLACK"/>
            <m:MaterialButton margin="8" text="Primary" waves="LIGHT" textColor="WHITE" iconType="POLYMER" iconPosition="LEFT"/>
            <m:MaterialButton margin="8" text="Disabled" waves="LIGHT" iconType="POLYMER" iconPosition="RIGHT" enabled="false"/>
            <m:MaterialButton margin="8" text="Warn" waves="LIGHT" backgroundColor="RED" textColor="WHITE" iconType="POLYMER" iconPosition="RIGHT"/>
            <m:MaterialButton margin="8" text="Icon Color" waves="RED" backgroundColor="WHITE" textColor="BLACK" iconType="POLYMER" iconPosition="RIGHT" iconColor="RED"/>
            
            <g:HTMLPanel>
                <pre>
                    &lt;m:MaterialButton margin="8" text="Button" waves="DEFAULT" backgroundColor="WHITE"  textColor="BLACK"/>

                    &lt;m:MaterialButton margin="8" text="Primary" waves="LIGHT" textColor="WHITE" iconType="POLYMER" iconPosition="LEFT"/>

                    &lt;m:MaterialButton margin="8" text="Disabled" waves="LIGHT" iconType="POLYMER" iconPosition="RIGHT" enabled="false"/>

                    &lt;m:MaterialButton margin="8" text="Warn" waves="LIGHT" backgroundColor="RED" textColor="WHITE" iconType="POLYMER" iconPosition="RIGHT"/>

                    &lt;m:MaterialButton margin="8" text="Icon Color" waves="RED" backgroundColor="WHITE" textColor="BLACK" iconType="POLYMER" iconPosition="RIGHT" iconColor="RED"/>
                </pre>
            </g:HTMLPanel>
        </m:MaterialPanel>
    </m:MaterialPanel>
</ui:UiBinder>
