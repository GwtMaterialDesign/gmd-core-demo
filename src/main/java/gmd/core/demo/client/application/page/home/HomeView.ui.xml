<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:demo="urn:import:gmd.core.demo.client.application.page.home.component"
			 xmlns:m="urn:import:gwt.material.design.client.ui">

	<m:MaterialPanel>
		<m:MaterialTitle title="Material Motion POC" description="Below are just proof of concepts that needs standardization."/>

		<!-- Shared Z Axis -->
		<m:MaterialPanel>
			<demo:MotionDemo ui:field="sharedAxisZ" title="Z-Position" description="UI elements that do not have a strong relationship"
							 sourceUrl="https://i.imgur.com/cE6HYtb.png" targetUrl="https://i.imgur.com/bbLDVuY.png" headerUrl="https://i.imgur.com/t0okRcI.png"/>
			<m:MaterialButton text="Enter" ui:field="sharedZAxisEnter"/>
			<m:MaterialButton text="Exit" ui:field="sharedZAxisExit"/>
		</m:MaterialPanel>

		<!-- Shared Y Axis -->
		<m:MaterialPanel>
			<demo:MotionDemo ui:field="sharedAxisY" title="Y-Position" description="UI elements that do not have a strong relationship"
							 sourceUrl="https://i.imgur.com/dY3AiMG.png" targetUrl="https://i.imgur.com/HnmiKLt.png" headerUrl="https://i.imgur.com/t0okRcI.png"/>
			<m:MaterialButton text="Enter" ui:field="sharedYAxisEnter"/>
			<m:MaterialButton text="Exit" ui:field="sharedYAxisExit"/>
		</m:MaterialPanel>

		<!-- Shared X Axis -->
		<m:MaterialPanel>
			<demo:MotionDemo ui:field="sharedAxisX" title="X-Position" description="UI elements that do not have a strong relationship"
							 sourceUrl="https://i.imgur.com/NM4t8GN.png" targetUrl="https://i.imgur.com/KJSrLmE.png" headerUrl="https://i.imgur.com/t0okRcI.png"/>
			<m:MaterialButton text="Enter" ui:field="sharedXAxisEnter"/>
			<m:MaterialButton text="Exit" ui:field="sharedXAxisExit"/>
		</m:MaterialPanel>

		<!-- Fade Through -->
		<m:MaterialPanel>
			<demo:MotionDemo ui:field="fadeThrough" title="Fade Through" description="UI elements that do not have a strong relationship"
							 sourceUrl="https://i.imgur.com/dY3AiMG.png" targetUrl="https://i.imgur.com/HnmiKLt.png" headerUrl="https://i.imgur.com/t0okRcI.png"/>
			<m:MaterialButton text="Enter" ui:field="fadeThroughEnter"/>
			<m:MaterialButton text="Exit" ui:field="fadeThroughExit"/>
		</m:MaterialPanel>

		<!-- Fade -->
		<m:MaterialPanel>
			<m:MaterialTitle title="Fade" description="UI elements that do not have a strong relationship"/>
			<m:MaterialPanel layoutPosition="RELATIVE" backgroundColor="WHITE" height="600px" width="300px">
				<m:MaterialNavBar backgroundColor="PURPLE">
					<m:MaterialNavBrand marginLeft="60" href="#Test" float="LEFT" text="GMD"/>
				</m:MaterialNavBar>
				<m:MaterialPanel>
					<m:MaterialImage url="https://i.imgur.com/dY3AiMG.png"/>
				</m:MaterialPanel>
				<m:MaterialPanel ui:field="fadeTarget" visible="false" layoutPosition="ABSOLUTE" top="160" width="80%" height="200px" left="20" backgroundColor="RED"/>
				<m:MaterialButton ui:field="fadeButton" type="FLOATING" iconType="POLL" />
			</m:MaterialPanel>
			<m:MaterialButton text="Enter" ui:field="fadeEnter"/>
			<m:MaterialButton text="Exit" ui:field="fadeExit"/>
		</m:MaterialPanel>
	</m:MaterialPanel>
</ui:UiBinder>
