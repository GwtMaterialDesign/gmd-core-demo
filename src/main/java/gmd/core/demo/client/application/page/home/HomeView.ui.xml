<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m="urn:import:gwt.material.design.client.ui">

    <m:MaterialPanel>
        <m:MaterialRow padding="40" textAlign="CENTER">
            <m:MaterialImage url="launcher-icons/launcher4x.png" width="70px"/>
            <m:MaterialLabel text="GMD Project" fontWeight="BOLD" fontSize="3em"/>
            <m:MaterialLabel text="Build the future of GWT using PWAs and Material Design Look and Feel."/>
            <m:MaterialRow>
                <m:MaterialAnchorButton ui:field="github" text="Github" customIconType="fab fa-github" backgroundColor="WHITE" textColor="INDIGO" shadow="0"/>
                <m:MaterialAnchorButton ui:field="gitter" text="Gitter" customIconType="fab fa-gitter" backgroundColor="WHITE" textColor="INDIGO" shadow="0"/>
            </m:MaterialRow>
        </m:MaterialRow>
        <m:MaterialRow>
            <m:MaterialColumn grid="s12 m12 l8" offset="l2">
                <m:MaterialRow ui:field="dashboardsRow"/>
            </m:MaterialColumn>
        </m:MaterialRow>
    </m:MaterialPanel>
</ui:UiBinder>
