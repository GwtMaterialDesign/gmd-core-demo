<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:m="urn:import:gwt.material.design.client.ui">

	<m:MaterialColumn grid="s12 m4 l3">
		<m:MaterialCard>
			<m:MaterialCardContent padding="0">
				<m:MaterialCardImage backgroundColor="GREY_LIGHTEN_5">
					<m:MaterialImage ui:field="image" alt="dashboard-image" />
				</m:MaterialCardImage>
				<m:MaterialPanel padding="20">
					<m:MaterialLabel ui:field="title" fontSize="1.6em" fontWeight="BOLD"/>
					<m:MaterialLabel ui:field="description" marginBottom="20"/>
					<m:MaterialLink ui:field="link" text="EXPLORE" layoutPosition="ABSOLUTE" bottom="20" textColor="BLUE" fontWeight="BOLD"/>
				</m:MaterialPanel>
			</m:MaterialCardContent>
		</m:MaterialCard>
	</m:MaterialColumn>
</ui:UiBinder> 